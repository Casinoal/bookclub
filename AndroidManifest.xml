<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arw.apps.barcode"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bookicon"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="arw.apps.barcode.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="arw.apps.barcode.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="arw.apps.barcode.XMLparser"
            android:label="@string/title_activity_xmlparser" >
        </activity>
        <activity
            android:name="arw.apps.barcode.AndroidXMLParsingActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="arw.apps.barcode.SingleMenuItemActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="arw.apps.barcode.Listing"
            android:label="@string/title_activity_listing" >
        </activity>
        <activity
            android:name="arw.apps.barcode.ShowSettingsActivity"
            android:label="@string/title_activity_prefs" >
        </activity>
        <activity
            android:name="arw.apps.barcode.UserSettingActivity"
            android:label="@string/title_activity_prefs" >
        </activity>
        <activity
            android:name="arw.apps.barcode.QuickPrefsActivity"
            android:label="@string/title_activity_prefs" >
        </activity>
        <activity
            android:name="arw.apps.barcode.AndroidListClient"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name="arw.apps.barcode.Lookup"
            android:label="@string/title_activity_intent" >
        </activity>
    </application>

</manifest>
